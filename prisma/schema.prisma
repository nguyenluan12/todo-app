datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  color     String?
  tasks     Task[]
  createdAt DateTime @default(now())
}

model Task {
  id         Int       @id @default(autoincrement())
  title      String
  note       String?
  start      DateTime?
  end        DateTime?
  isDone     Boolean   @default(false)
  categoryId Int
  category   Category  @relation(fields: [categoryId], references: [id])
  createdAt  DateTime  @default(now())
}
